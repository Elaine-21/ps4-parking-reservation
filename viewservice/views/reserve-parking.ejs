    <form action="/postReserve" method="POST" class="needs-validation" novalidate>
      <div class="row g-3">
        <!-- Parking Slot -->
        <div class="col-12">
          <label for="slotId" class="form-label">Parking Slot</label>
          <input id="slotId" name="slotId" type="text" class="form-control" value="<%= selectedSlotId %>" required>
        </div>

        <!-- First & Last Name -->
        <div class="col-md-6">
          <label for="firstName" class="form-label">First Name</label>
          <input id="firstName" name="firstName" type="text" class="form-control" value="<%= user.firstName %>" readonly>
        </div>

        <div class="col-md-6">
          <label for="lastName" class="form-label">Last Name</label>
          <input id="lastName" name="lastName" type="text" class="form-control" value="<%= user.lastName %>" readonly>
        </div>

        <!-- Vehicle Plate Number -->
        <div class="col-md-6">
          <label for="plateNumber" class="form-label">Vehicle Plate Number</label>
          <input id="plateNumber" name="plateNumber" type="text" class="form-control" placeholder="ABC-1234" required>
          <div class="invalid-feedback">Please enter your vehicle plate number.</div>
        </div>

        <!-- Vehicle Type (dropdown) -->
        <div class="col-md-6">
          <label for="vehicleType" class="form-label">Vehicle Type</label>
          <select id="vehicleType" name="vehicleType" class="form-select" required>
            <option value="">Choose...</option>
            <option value="Car" <%= (typeof user.vehicleType !== 'undefined' && user.vehicleType === 'Car') ? 'selected' : '' %>>Car</option>
            <option value="Motorcycle" <%= (typeof user.vehicleType !== 'undefined' && user.vehicleType === 'Motorcycle') ? 'selected' : '' %>>Motorcycle</option>
          </select>
          <div class="invalid-feedback">Please select a vehicle type.</div>
        </div>

        <!-- Date -->
        <div class="col-md-4">
          <label for="date" class="form-label">Date</label>
          <input id="date" name="date" type="date" class="form-control" required>
          <div class="invalid-feedback">Please choose a date.</div>
        </div>

        <!-- Start Time -->
        <div class="col-md-4">
          <label for="startTime" class="form-label">Start Time</label>
          <input id="startTime" name="startTime" type="time" class="form-control" required>
          <div class="invalid-feedback">Please provide a start time.</div>
        </div>

        <!-- End Time -->
        <div class="col-md-4">
          <label for="endTime" class="form-label">End Time</label>
          <input id="endTime" name="endTime" type="time" class="form-control" required>
          <div class="invalid-feedback">Please provide an end time.</div>
        </div>

        <!-- Submit -->
        <div class="col-12 text-end mt-2">
          <a href="/dashboard" class="btn btn-outline-secondary me-2">Cancel</a>
          <button type="submit" class="btn btn-primary">Submit Reservation</button>
        </div>
      </div>
    </form>

  </div>
