<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Dashboard</title>
  <link rel="stylesheet" href="/static/style.css" />
</head>
<body>
  <div class="container">
    <div class="card">
      <header>
        <div>
          <h1>Dashboard</h1>
          <% if (user) { %>
            <p style="color: #666; margin-top: 5px;">
              Welcome, <strong><%= user.firstName %> <%= user.lastName %></strong> 
              <span style="background:#e5e7eb; padding:2px 6px; border-radius:4px; font-size:0.8em;"><%= user.role %></span>
            </p>
          <% } %>
        </div>
        <a href="/logout" style="color: var(--danger);">Logout</a>
      </header>

      <% if (locals.success) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>

      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 2rem;">
        <div>
          <h3>ðŸ“… Today</h3>
          <p id="current-date"><%= currentDate || new Date().toLocaleDateString() %></p>
        </div>
        <div>
          <h3>ðŸ•’ Time</h3>
          <p id="realtime-clock" style="font-weight: bold; font-size: 1.2em; color: var(--primary);">Loading...</p>
        </div>
      </div>

      <h3>âš¡ Quick Actions</h3>
      <div class="actions">
        <a href="/view-parking" class="btn btn-primary">View Parking Map</a>
        
        <% if (user.role === 'student' || user.role === 'faculty') { %>
          <a href="/reserve-parking" class="btn btn-primary">Reserve a Slot</a>
        <% } %>

        <% if (user.role === 'admin' || user.role === 'faculty') { %>
          <a href="/violation/upload" class="btn btn-danger">Report Violation</a>
        <% } %>

        <% if (user.role === 'admin') { %>
          <a href="/admin/reservations" class="btn btn-warning">Admin Panel</a>
        <% } %>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      function updateTime() {
        const now = new Date();
        const timeString = now.toLocaleTimeString('en-US', { 
          hour: '2-digit', 
          minute: '2-digit', 
          second: '2-digit' 
        });
        
        const clockElement = document.getElementById('realtime-clock');
        const dateElement = document.getElementById('current-date');

        if (clockElement) {
          clockElement.textContent = timeString;
        } else {
          console.error("Could not find element with id 'realtime-clock'");
        }

        if (dateElement) {
          dateElement.textContent = now.toLocaleDateString();
        }
      }

      updateTime();
      setInterval(updateTime, 1000);
    });
  </script>
</body>
</html>